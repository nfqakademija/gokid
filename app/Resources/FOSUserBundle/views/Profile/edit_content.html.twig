<div class="container">
    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-sm-4">
            {% include '@App/Home/includes/accountLeftMenu.html.twig' %}
        </div>
        <div class="col-sm-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Paskyros duomen≈≥ redagavimas
                </div>
                <div class="content-form logged-in no-shadow">
                    {% form_theme form '@App/form/OfferRegistrationFields.html.twig' %}
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_row(form.name) }}
                        {{ form_row(form.phone) }}
                        {{ form_row(form.current_password) }}
                        {{ form_widget(form.plainPassword) }}
                    <div>
                        <input type="submit" value="Keisti duomenis" class="submit"/>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
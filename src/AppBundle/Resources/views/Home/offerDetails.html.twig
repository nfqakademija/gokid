            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="{{ asset ('/images/'~ offer.getImage)}}" class="img-responsive" alt="{{ offer.getName }}">
                </div>

                <div class="item">
                    <img src="{{ asset ('/images/'~ offer.getImage)}}" class="img-responsive" alt="{{ offer.getName }}">
                </div>

                <div class="item">
